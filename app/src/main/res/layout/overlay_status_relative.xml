<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/dark_background_transparent"
    android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/text_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_stat_name"
        android:drawableStart="@drawable/ic_stat_name"
        android:drawablePadding="5dp"
        android:text="100%"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/text_altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_dist_above"
        android:drawableStart="@drawable/ic_dist_above"
        android:drawablePadding="5dp"
        android:text="100 ft"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/text_altitude"
        android:layout_toRightOf="@+id/text_altitude"
        android:drawableLeft="@drawable/ic_dist_from"
        android:drawableStart="@drawable/ic_dist_from"
        android:drawablePadding="5dp"
        android:text="200 ft"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/image_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        app:srcCompat="@drawable/ic_satellite"
        android:layout_alignTop="@+id/text_battery"
        android:layout_toLeftOf="@+id/text_battery"
        android:layout_toStartOf="@+id/text_battery"/>
</RelativeLayout>
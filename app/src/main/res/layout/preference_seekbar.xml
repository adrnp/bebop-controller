<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="105dp">

    <TextView
        android:id="@+id/text_preference_seekbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="Title"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/text_preference_seekbar_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_preference_seekbar_title"
        android:layout_alignStart="@+id/text_preference_seekbar_title"
        android:layout_below="@+id/text_preference_seekbar_title"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:text="details"
        android:textColor="@color/primary_text"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_preference_seekbar_detail"
        android:layout_alignLeft="@+id/text_preference_seekbar_detail"
        android:layout_alignStart="@+id/text_preference_seekbar_detail"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>